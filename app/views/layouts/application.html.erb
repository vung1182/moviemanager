<!DOCTYPE html>
<html>
<head>
  <title>Moviemanager</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <%= csrf_meta_tags %>
  <script>
	$(document).ready(function(){
	    if ( $( "#splashscreen" ).length ) {
			$( "#splashscreen" ).show();
			$( "#header" ).hide();
			$( "#container" ).hide();
			$( "#footer" ).hide();
	 	}
	 	$("#enter_link").bind("click", function(){
    		$( "#splashscreen" ).hide();
    		$( "#header" ).show();
			$( "#container" ).show();
    		$( "#footer" ).show();
		});
	});
  </script>
 </head>
  <body>
    <%= render 'layouts/header' %>
    <div class="container">
      <%= yield %>
    </div>
    <%= render 'layouts/footer' %>
  </body>
</html>